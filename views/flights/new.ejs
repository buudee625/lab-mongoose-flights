<%- include('../partials/header') %>

<body>
  <h1>Create A New Flight</h1>
  <form id="new-flight" action="/flights" method="POST">
    <label for="airline">Choose an airline:</label>
    <select id="airline-dropdown" name="airline">
      <option value="American">American</option>
      <option value="Alaska">Alaska</option>
      <option value="Delta">Delta</option>
      <option value="Southwest">Southwest</option>
      <option value="Spirit">Spirit</option>
      <option value="United">United</option>
    </select>
    <br />
    <label for="airport">Choose an airport:</label>
    <select id="airport-dropdown" name="airport">
      <option value="ATL">Atlanta (ATL)</option>
      <option value="DFW">Dallas (DFW)</option>
      <option value="DEN" selected>Denver (DEN)</option>
      <option value="LAX">Los Angeles (LAX)</option>
      <option value="SAN">San Diego (SAN)</option>
    </select>
    <br />
    <label for="flightNo">Flight Number:</label>
    <input type="text" id="flight-no" name="flightNo" />
    <br />
    <lable for="departs">Departure Date:</lable>
    <input
      type="datetime-local"
      id="depart-date"
      name="departs"
      min="2023-01-01T00:00"
    />
    <br />
    <button type="submit">Add A Flight</button>
  </form>
</body>

<%- include('../partials/footer') %>
